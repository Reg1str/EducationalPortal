@model EducationPortal.Application.Services.DTO.CourseEditDTO

<div class="container justify-content-center">
    <form asp-controller="Course" asp-action="Edit" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="Id" value="@Model.Id" hidden>
        </div>
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="Title" placeholder="@Model.Title" required="required">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="Description" placeholder="@Model.Description" required="required">
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>