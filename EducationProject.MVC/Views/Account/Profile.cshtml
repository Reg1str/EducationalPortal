@using EducationPortal.Application.Services.DTO
@model EducationPortal.Application.Services.DTO.UserInfoDTO

<link rel="stylesheet" href="/css/profile.css">

<div class="layout-content">

    <div class="container flex-grow-1 container-p-y mt-3">

        <div class="container-m-nx container-m-ny theme-bg-white mb-4 justify-content-center align-items-center text-center" style="border-radius: 5px;">
            <div class="media col-md-10 col-lg-8 col-xl-7 py-5 mx-auto container justify-content-center align-items-center">
                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="d-block ui-w-100 rounded-circle">
            </div>
            <div class="d-inline-block text-center mb-3">
                <h4 class="font-weight-bold">@Model.FirstName @Model.LastName</h4>
                <p class="font-weight-bold">@Model.Email</p>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="card mb-4">
                    <div class="card-header with-elements">
                        <span class="card-header-title">
                            Courses
                        </span>
                    </div>
                    <div class="row no-gutters row-bordered row-border-light">
                        @if (ViewData["courseInfoList"] != null)
                        {
                            foreach (var course in ((IList<CourseInfoDTO>)ViewData["courseInfoList"]))
                            {
                                <div class="d-flex col-4 col-sm-3 col-md-4 flex-column align-items-center text-body py-3 px-2">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="" class="d-block ui-w-40 rounded-circle mb-2">
                                    <div class="text-center small">@course.CourseTitle</div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-xl-4">

                <div class="card mb-4">
                    <div class="card-header">Skills</div>
                    <div class="card-body">
                        @if (ViewData["courseInfoList"] != null)
                        {
                            foreach (var skill in ((IList<SkillInfoDTO>)ViewData["skillInfoList"]))
                            {
                                <div class="mb-1">@skill.Name <small class="text-muted">@skill.UserProgress %</small></div>
                                <div class="progress mb-3" style="height: 4px;">
                                    <div class="progress-bar bg-success" aria-valuenow="@skill.UserProgress" aria-valuemin="0" aria-valuemax="100" style="width: @(skill.UserProgress)%;"></div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>